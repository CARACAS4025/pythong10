def contarParesImpares():
    contadorPares = 0
    contadorImpares = 0

    while True:
        try:
            numero = int(input("Ingrese un número (número negativo para terminar): "))
            if numero < 0:
                break
            
            if numero % 2 == 0:
                contadorPares += 1
            else:
                contadorImpares += 1
        except ValueError:
            print("Por favor, ingrese un número válido.")

    print(f"Total de números pares: {contadorPares}")
    print(f"Total de números impares: {contadorImpares}")

if __name__ == "__main__":
    contarParesImpares()
