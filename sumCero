def sumarNumeros():
    suma = 0
    while True:
        try:
            numero = int(input("Ingrese un número (0 para terminar): "))
            if numero == 0:
                break
            suma += numero
        except ValueError:
            print("Por favor, ingrese un número válido.")
    
    print(f"La suma total es: {suma}")

if __name__ == "__main__":
    sumarNumeros()
